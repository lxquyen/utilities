<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_custom_view"
        style="@style/Button.Menu"
        android:text="@string/menu_custom_view" />

    <Button
        android:id="@+id/btn_rank"
        style="@style/Button.Menu"
        android:text="@string/menu_rank" />

    <Button
        android:id="@+id/btn_rxjava"
        style="@style/Button.Menu"
        android:text="@string/menu_rxjava" />

    <Button
        android:id="@+id/btn_audio"
        style="@style/Button.Menu"
        android:text="@string/menu_audio" />
</LinearLayout>
